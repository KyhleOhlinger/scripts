{
  "manifest_version": 3,
  "name": "Smart AI Query Helper",
  "version": "2.1.0",
  "description": "Enhanced productivity tool for AI-powered research and content creation",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/robot_icon-16.png",
      "32": "icons/robot_icon-32.png",
      "48": "icons/robot_icon-48.png",
      "128": "icons/robot_icon-128.png"
    }
  },
  "icons": {
    "16": "icons/robot_icon-16.png",
    "32": "icons/robot_icon-32.png",
    "48": "icons/robot_icon-48.png",
    "128": "icons/robot_icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://www.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*", "https://gemini.google.com/*", "https://www.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
